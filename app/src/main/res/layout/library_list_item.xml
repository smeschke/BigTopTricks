<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/siteswap_list_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/siteswap_list_item_source"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/siteswap_list_item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siteswap_list_item_textview" />

    <ImageView
        android:id="@+id/library_difficulty_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/diff0"
        android:contentDescription="@string/content_description_prop_type"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/siteswap_list_item_capacity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/library_difficulty_image_view"
        app:layout_constraintBottom_toBottomOf="@id/library_difficulty_image_view"
        app:layout_constraintRight_toRightOf="@id/library_difficulty_image_view"
        app:layout_constraintTop_toTopOf="@id/library_difficulty_image_view" />

</android.support.constraint.ConstraintLayout>