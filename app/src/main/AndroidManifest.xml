<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stephen.bigtoptricks">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.Provider"
            android:authorities="com.example.stephen.bigtoptricks"
            android:exported="false" />

        <activity android:name=".addTricks.AddTrick"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TrickDetail"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".DisplayData"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".addTricks.AddTrickFromList"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".addTricks.TrickDiscovery"
            android:parentActivityName=".addTricks.AddTrickFromList"/>
        <receiver android:name=".TricksWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tricks_widget_info" />
        </receiver>
    </application>

</manifest>